<div class="container-xxl flex-grow-1 container-p-y">
  <div class="card">
    <div class="d-flex justify-content-between align-items-center mt-3">
      <h5 class="card-header">{{title}}</h5>
      <button type="button" id="modalBtn" style="height: 40px;" class="mx-3 btn btn-primary">
        Qo'shish
      </button>
    </div>
    <div class="container">
      <div class="row mb-4">
      {{#each gallery}}
        <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12 col-12">
          <div class="card">
            <a href="/admin/gallery/delete/{{_id}}" class="gallery-del">
            <i class="bx bx-trash me-1"></i></a>
            <img class="card-img-top" src="/{{img}}" alt="Gallery image">
            <div class="card-body">
              <h5 class="card-title">{{type}}</h5>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
    </div>
  </div>
</div>
<div class="modal">
  <div class="modal-dialog">
    <form action="/admin/gallery" method="post" enctype="multipart/form-data">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Galareya qo'shish</h5>
          <button type="button" class="close">
            <span>&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="mb-3">
            <input type="hidden" name="_csrf" value="{{csrf}}" />
            <label for="defaultSelect" class="form-label">Tipini tanlang</label>
            <select id="defaultSelect" name="type" class="form-select">
              <option>Tipni tanlang</option>
              <option value="*">Barchasi</option>
              <option value="first">Playing</option>
              <option value="second">Drawing</option>
              <option value="third">Reading</option>
            </select>
          </div>
          <div class="form-group">
            <label for="formFile" class="form-label">Gallereya kiritish</label>
            <input class="form-control" name="img" type="file" id="formFile">
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" onclick="closeModal()">Bekor qilish</button>
          <button type="submit" class="btn btn-primary">Saqlash</button>
        </div>
      </div>
    </form>
  </div>
</div>

<script>
  let modal = document.querySelector('.modal');
  let modalBtn = document.querySelector('#modalBtn');
  let closeBtn = document.querySelector('.close');
  modalBtn.addEventListener('click', () => {
    modal.classList.add('show');
  });
  closeBtn.addEventListener('click', () => {
    closeModal();
  });

  function closeModal() {
    modal.classList.remove('show');
  }
</script>